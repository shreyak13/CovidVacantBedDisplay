<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addisolation"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#b89">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Insert Your Isolation Center Details"
                android:gravity="center"
                android:textStyle="bold"
                android:backgroundTint="#ffa"
                android:textSize="20sp"/>
            <ImageButton
                android:id="@+id/icimageButton"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Isolation centre Name"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="73dp" />

            <EditText
                android:id="@+id/icname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:background="@drawable/editshape"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type(Government or Private)"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="73dp" />
            <EditText
                android:id="@+id/ictype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:background="@drawable/editshape"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bed capacity "
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="73dp" />
            <EditText
                android:id="@+id/iccapsity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:background="@drawable/editshape"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Normal Bed"
                        android:textStyle="bold|italic"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/inormalbed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editshape"
                        android:textColor="@color/black"
                        /></LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Oxygen bed"
                        android:textStyle="bold|italic"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/ioxygenbed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:background="@drawable/editshape"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ICU Bed"
                        android:textStyle="bold|italic"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/iicubed"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editshape"/>

                </LinearLayout>

            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="73dp" />
            <EditText
                android:id="@+id/icaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:background="@drawable/editshape"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="73dp" />
            <EditText
                android:id="@+id/iccontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:background="@drawable/editshape"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/icadd"
                    android:background="@drawable/shape"
                    android:backgroundTint="#aeceef"
                    android:backgroundTintMode="add"
                    android:layout_marginTop="10dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="ADD  centre details"/>
                <Button
                    android:id="@+id/icupdate"
                    android:background="@drawable/shape"
                    android:backgroundTint="#aeceef"
                    android:backgroundTintMode="add"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="update centre details"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>